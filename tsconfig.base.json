{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dotdev/inversify": ["packages/inversify/src/index.ts"],
      "@dotdev/react": ["packages/react/src/index.ts"],
      "@dotdev/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
