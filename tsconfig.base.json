{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@reactpkg/inversify": ["packages/inversify/src/index.ts"],
      "@reactapp/core": ["packages/reactapp/core/src/index.ts"],
      "@reactpkg/reactapp/react-table": [
        "packages/reactapp/react-table/src/index.ts"
      ],
      "@reactapp/react-table": ["packages/reactapp/react-table/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
